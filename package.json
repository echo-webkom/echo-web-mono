{
  "name": "echo-web",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "tests"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "web:dev": "turbo run dev --filter=web",
    "docs:dev": "turbo run dev --filter=docs",
    "cms:dev": "turbo run dev --filter=cms",
    "db:dev": "turbo run dev --filter=db",
    "start": "turbo run start",
    "clean": "rm -rf node_modules",
    "clean-workspaces": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:migrate": "pnpm --filter=db db:migrate",
    "db:deploy": "turbo run db:deploy",
    "docker:up": "pnpm --filter=db docker:up",
    "docker:down": "pnpm --filter=db docker:down",
    "lint": "turbo run lint && manypkg check",
    "lint-fix": "turbo run lint -- --fix && manypkg fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "format-check": "prettier --check \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "type-check": "turbo run type-check",
    "test:dev": "turbo run test:dev",
    "test:e2e": "start-server-and-test 'pnpm --filter=web run start' http://localhost:3000 'pnpm run test:dev'",
    "postinstall": "pnpm run db:generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@manypkg/cli": "0.21.0",
    "@types/node": "18.16.19",
    "@types/prettier": "^2.7.3",
    "eslint": "^8.45.0",
    "eslint-config-custom": "0.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prettier-plugin-organize-imports": "3.2.3",
    "prettier-plugin-tailwindcss": "0.4.1",
    "start-server-and-test": "^2.0.0",
    "turbo": "1.10.8",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mjs,cjs}": [
      "pnpm lint",
      "pnpm format-check"
    ]
  },
  "pnpm": {
    "overrides": {
      "next@latest": "13.0.6"
    }
  },
  "packageManager": "pnpm@8.6.8"
}
