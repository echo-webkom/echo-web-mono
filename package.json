{
  "name": "echo-web",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "tests"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev:web": "turbo run dev --filter=web",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:studio": "turbo run dev --filter=db",
    "dev:all": "turbo run dev",
    "start": "turbo run start",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push db:generate",
    "docker:up": "turbo run docker:up",
    "docker:down": "turbo run docker:down",
    "lint": "turbo run lint && manypkg check",
    "lint:fix": "turbo lint -- --fix && manypkg fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "type-check": "turbo run type-check",
    "test:dev": "turbo run test:dev",
    "test:e2e": "start-server-and-test 'pnpm --filter=web run start' http://localhost:3000 'pnpm run test:dev'",
    "postinstall": "pnpm run db:generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "0.20.0",
    "@types/node": "18.14.6",
    "@types/prettier": "^2.7.2",
    "eslint": "^8.39.0",
    "eslint-config-custom": "0.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "prettier-plugin-organize-imports": "3.2.2",
    "prettier-plugin-tailwindcss": "0.2.8",
    "start-server-and-test": "^2.0.0",
    "turbo": "1.9.3",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mjs,cjs}": [
      "pnpm lint",
      "pnpm format:check"
    ]
  },
  "pnpm": {
    "overrides": {
      "next@latest": "13.0.6"
    }
  },
  "packageManager": "pnpm@8.4.0"
}
