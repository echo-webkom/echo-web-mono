{
  "name": "echo-web",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.10.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "web:dev": "turbo run dev --filter=web",
    "docs:dev": "turbo run dev --filter=docs",
    "cms:dev": "turbo run dev --filter=cms",
    "db:dev": "turbo run dev --filter=db",
    "start": "turbo run start",
    "setup": "pnpm install && pnpm db:up && pnpm db:migrate",
    "clean": "rm -rf node_modules",
    "clean-workspaces": "turbo run clean",
    "db:generate": "pnpm --filter=db db:generate",
    "db:migrate": "pnpm --filter=db db:migrate",
    "db:seed": "pnpm --filter=db db:seed",
    "db:up": "pnpm --filter=db db:up",
    "db:down": "pnpm --filter=db db:down",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test:unit": "turbo run test:unit",
    "test:e2e": "pnpm --filter=playwright test",
    "test:e2e:ui": "pnpm --filter=playwright ui"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/prettier": "^2.7.3",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
    "prettier-plugin-tailwindcss": "0.5.6",
    "start-server-and-test": "^2.0.1",
    "turbo": "1.10.16",
    "typescript": "5.2.2"
  }
}
