{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "mdx": {
    "plugins": ["remark-gfm"]
  },
  "include": [
    "next-env.d.ts",
    ".eslintrc.cjs",
    "tailwind.config.ts",
    "theme.config.tsx",
    "src",
    "*.cjs",
    "*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
