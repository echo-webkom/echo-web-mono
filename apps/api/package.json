{
  "name": "@echo-webkom/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "wrangler dev src/index.ts --test-scheduled --show-interactive-dev-session false --port 8000",
    "deploy": "wrangler deploy --minify src/index.ts",
    "typegen": "wrangler types worker-configuration.d.ts --env-interface CloudflareBindings",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules .wrangler"
  },
  "dependencies": {
    "@echo-webkom/db": "workspace:*",
    "date-fns": "3.6.0",
    "drizzle-orm": "0.33.0",
    "hono": "4.6.3",
    "postgres": "3.4.4",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20240925.0",
    "@echo-webkom/tsconfig": "workspace:*",
    "typescript": "5.6.2",
    "vitest": "2.1.1",
    "wrangler": "3.78.12"
  }
}
