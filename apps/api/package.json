  "license": "MIT",
  "description": "echo Webkom API",
  "main": "src/main.ts",
  "packageManager": "pnpm@8.7.6",
  "scripts": {
    "start": "pnpm with-env tsx ./src/main.ts",
    "dev": "pnpm with-env tsx watch src/main.ts",
    "test": "pnpm with-env vitest",
    "test:coverage": "pnpm with-env vitest --coverage",
    "lint": "eslint '**/*.{js,ts,jsx,tsx}'",
    "email:dev": "email dev --dir ./src/email/templates",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@echo-webkom/lib": "workspace:*",
    "@echo-webkom/storage": "workspace:*",
    "@hono/node-server": "^1.2.0",
    "@react-email/button": "0.0.10",
    "@react-email/html": "0.0.4",
    "@react-email/render": "^0.0.7",
    "@sanity/client": "^6.4.12",
    "@types/bcrypt": "^5.0.0",
    "@types/eslint": "^8.44.3",
    "@types/node": "^20.7.1",
    "@types/pg": "^8.10.3",
    "@types/react": "^18.2.23",
    "@vitest/coverage-v8": "^0.34.5",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "7.3.0",
    "drizzle-orm": "^0.28.6",
    "eslint": "^8.50.0",
    "eslint-config-webkom": "workspace:*",
    "hono": "^3.7.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-email": "1.9.5",
    "resend": "^1.1.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.5",
    "vitest-environment-miniflare": "^2.14.1",
    "zod": "^3.22.2"
