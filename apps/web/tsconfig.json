{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@echo-webkom/tsconfig/nextjs.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".eslintrc.cjs",
    "./src/env.mjs"
  ],
  "exclude": ["node_modules", ".next"]
}
