{
  "name": "@echo-webkom/playwright",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "test:e2e": "TESTING=\"true\" pnpm with-env playwright test",
    "test:e2e:ui": "TESTING=\"true\" pnpm with-env playwright test --ui-port 5000",
    "test:install": "playwright install --with-deps",
    "test:report": "playwright show-report",
    "lint": "eslint web --ext .ts",
    "lint:fix": "eslint lint --fix",
    "clean": "rm -rf node_modules playwright-report test-results",
    "with-env": "dotenv -e ../.env --"
  },
  "devDependencies": {
    "@playwright/test": "1.40.1",
    "@types/node": "18.19.3",
    "dotenv-cli": "7.3.0",
    "eslint": "8.55.0",
    "eslint-config-webkom": "workspace:*",
    "typescript": "5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "webkom/base"
    ]
  }
}
