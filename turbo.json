{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": [".next/**", ".santiy/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".santiy/**"]
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:e2e:ui": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "email:preview": {
      "persistent": true,
      "cache": false
    },
    "test:unit": {},
    "lint": {},
    "typecheck": {},
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "format": {}
  }
}
